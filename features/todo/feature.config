name: "todo"
version: 0.1.0
description: "Tailwind-themed feature scaffold."
owners:
  - team: frontend-team
    contact: #channel or email
dependencies: []
metadata:
  status: draft
routePrefix: "todo"

public:
  exports:
    - name: hooks
      type: hooks
      path: ./hooks/index.ts
    - name: getStoredTodos
      type: function
      path: ./public/index.ts
    - name: persistTodos
      type: function
      path: ./public/index.ts
    - name: createTodoItem
      type: function
      path: ./public/index.ts
  hooks:
    init: ./hooks/init.ts
    cleanup: ./hooks/cleanup.ts
    guards:
      onRouteEnter: ./guards/authorize.ts

routes:
  - name: "todo.main"
    path: /todo
    component: ./pages/TodoPage.tsx
    layout: ../../core/routing/Layout.tsx
    lazy: true
    policies:
      auth: optional
      cache: no-store
      chunkHint: feature

policies:
  auth: optional
  cache: no-store
  chunkHint: feature
  rateLimit: soft
