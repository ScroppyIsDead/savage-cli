{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@savage-cli/routing": ["src/core/routing/index.ts"],
      "@savage-cli/routing/*": ["src/core/routing/*"]
    },
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "vite/client", "node"],
    "typeRoots": ["./node_modules/@types", "./node_modules/vitest"]
  },
  "include": ["src", "features", "templates", "core", "tests"],
  "exclude": ["node_modules", "dist"]
}
