name: "{{featureName}}"
version: 0.1.0
description: "Tailwind-themed feature scaffold."
owners:
  - team: frontend-team
    contact: #channel or email
dependencies: []
metadata:
  status: draft
routePrefix: "{{featureName}}"

public:
  exports:
    - name: MainPage
      type: component
      path: ./public/index.ts
    - name: hooks
      type: hooks
      path: ./hooks/index.ts
  hooks:
    init: ./hooks/init.ts
    cleanup: ./hooks/cleanup.ts
    guards:
      onRouteEnter: ./guards/authorize.ts

routes:
  - name: "{{featureName}}.main"
    path: /{{featureName}}
    component: ./pages/{{featureName}}Page.tsx
    layout: ../../core/routing/Layout.tsx
    lazy: true
    policies:
      auth: optional
      cache: no-store
      chunkHint: feature

policies:
  auth: optional
  cache: no-store
  chunkHint: feature
  telemetryContext: "{{featureName}}"
  rateLimit: soft
